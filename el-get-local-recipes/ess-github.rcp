(:name ess-github
       :description "Emacs Speaks Statistics: statistical programming within Emacs"
       :type github
       :pkgname "emacs-ess/ESS"
       :info "doc/info/"
       :build `,(mapcar
                 (lambda (target)
                   (concat "make " target " EMACS=" el-get-emacs))
                 '("clean" "--directory=etc all" "--directory=lisp all"))
       :load-path ("lisp")
       :features ess-site)
